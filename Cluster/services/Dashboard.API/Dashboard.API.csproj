    <ImplicitUsings>enable</ImplicitUsings>
    <UserSecretsId>84128b03-ada8-4df7-b319-42dcf1c77be7</UserSecretsId>
    <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
    <DockerfileContext>..\..</DockerfileContext>
