@inherits LayoutComponentBase
@using ClusterFrontend.Services
@using ClusterFrontend.Interface
@inject IHttpContextAccessor HttpContextAccessor
@inject IAuthService AuthService
@inject NavigationManager NavigationManager
@inject IJSRuntime JSRuntime

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4">
            @if (HttpContextAccessor.HttpContext?.Request.Cookies.ContainsKey("JWTToken") == true)
            {
                <NavLink class="nav-link" href="/account">
                    <span class="bi bi-person-circle" aria-hidden="true"></span> Account
                </NavLink>
                <NavLink class="nav-link" href="/logout">
                    <span class="bi bi-person-circle" aria-hidden="true"></span> Logout
                </NavLink>
            }
            else
            {
                <NavLink class="nav-link" href="/login">
                    <span class="bi bi-person-circle" aria-hidden="true"></span> Login
                </NavLink>
            }
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>