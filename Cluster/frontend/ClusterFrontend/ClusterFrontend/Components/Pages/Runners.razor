    .container {
        display: flex;
        gap: 20px;
    }

    .column {
        flex: 1;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .left {
        background-color: #e7f0ff;
    }

    .right {
        background-color: #ffe7e7;
    }
</style>